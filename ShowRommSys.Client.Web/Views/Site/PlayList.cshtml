@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>PlayList</title>
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script language="javascript" type="text/javascript">
        function OptionPlay(type) {
            
            $.ajax({
                url: "/Site/StartPlayer",
                type: "POST",
                data: "{'ID':'" + type + "'}",
                cache: false,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    alert(data.d);
                },
                error: function (err) { alert(err.responseText) }
            });
        }
    </script>
</head>
<body>
    <div>
        <table border="1">
            <tr>
                <td>
                    播放器操作
                </td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <input type="button" value="开始" onclick="OptionPlay('0')"/>
                            </td>
                            <td>
                                <input type="button" value="上一个内容" onclick="OptionPlay('3')"/>
                            </td>
                            <td>
                                <input type="button" value="下一个内容" onclick="OptionPlay('4')"/>
                            </td>
                            <td>
                                <input type="button" value="结束" onclick="OptionPlay('15')"/>
                            </td>
                            <td>
                                <input type="button" value="全屏" onclick="OptionPlay('8')"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    文档内容操作
                </td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <input type="button" value="上一页" onclick="OptionPlay('1')"/>
                            </td>
                            <td>
                                <input type="button" value="下一页" onclick="OptionPlay('2')"/>
                            </td>
                            <td>
                                <input type="button" value="放大" onclick="OptionPlay('9')"/>
                            </td>
                            <td>
                                <input type="button" value="缩小" onclick="OptionPlay('10')"/>
                            </td>
                            <td>
                                <input type="button" value="上移" onclick="OptionPlay('11')"/>
                            </td>
                            <td>
                                <input type="button" value="下移" onclick="OptionPlay('12')"/>
                            </td>
                            <td>
                                <input type="button" value="左移" onclick="OptionPlay('13')"/>
                            </td>
                            <td>
                                <input type="button" value="右移" onclick="OptionPlay('14')"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    视频内容操作
                </td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <input type="button" value="暂停" onclick="OptionPlay('6')"/>
                            </td>
                            <td>
                                <input type="button" value="播放" onclick="OptionPlay('5')"/>
                            </td>
                          @*  <td>
                                <input type="button" value="放大" />
                            </td>
                            <td>
                                <input type="button" value="缩小" />
                            </td>*@
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
