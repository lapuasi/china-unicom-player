@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/PadMasterPage.cshtml";
}
@model ShowRommSys.Client.Web.Models.Users
<div class="ipad2">
    <div class="box">
        <div class="top">
            <div class="title one">演示控制</div>
        </div>
        <div class="content">
            @using (Html.BeginForm())
            {
            <div class="label"><h2>输入用户名和密码登录系统</h2></div>
            <div class="section">
                <ul>
                    <li class="field"><label for="Number">用户名</label><p><input type="text" name="Number" id="Number" class="text" tabindex="1" autofocus="true" /></p></li>
                    <li class="field"><label for="Password">密码</label><p><input type="password" name="Password" id="Password" class="text" tabindex="2" /></p></li>
                </ul>
            </div>
            <button type="submit">登录</button>
            }
            @if (ViewData["Error"] != null)
            {
                <div class="label"><p>@ViewData["Error"].ToString()</p></div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
$(function(){
    $('button').bind('touchstart',function(){$(this).addClass('touchstart');}).bind('touchend',function(){$(this).removeClass('touchstart')});
});
</script>