<Page x:Class="ShowRoomSys.Client.Play.MediaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mediaControl="clr-namespace:AxWMPLib;assembly=AxInterop.WMPLib"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Media">

    <Grid>
        <WindowsFormsHost x:Name="winHost" Grid.Row="1" Visibility="Visible">
            <mediaControl:AxWindowsMediaPlayer x:Name="wpfMediaPlayer"/>
        </WindowsFormsHost>
    </Grid>
</Page>
